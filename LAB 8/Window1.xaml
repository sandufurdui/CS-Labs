<Window x:Class="TwoFactorEmail.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoFactorEmail"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="22" Margin="0,115,0,0" Text="Please check your email and write verification code." TextWrapping="Wrap" VerticalAlignment="Top" Width="278"/>
        <Button Content=" Submit " HorizontalAlignment="Center" Margin="0,217,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <TextBox x:Name="objTextBox" HorizontalAlignment="Center" Margin="0,168,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontWeight="Normal" AllowDrop="True" AutomationProperties.HelpText="Write code here" TextChanged="TextBox_TextChanged" AutomationProperties.Name="passwordField"/>
    </Grid>
</Window>
