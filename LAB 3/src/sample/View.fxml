<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.text.Text?>
<FlowPane prefHeight="700.0" prefWidth="800.0" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="sample.ViewController">
  <HBox alignment="CENTER" prefHeight="150.0" prefWidth="450.0">
    <Button fx:id="showButton" mnemonicParsing="false" onAction="#readAndConvertFile" prefHeight="24.0" prefWidth="159.0" text="Parse And Convert" />
    <children>
      <Label fx:id="selectedLbl" />
    </children>
  </HBox>
  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="500.0">
    <padding>
      <Insets left="20.0" right="20.0" />
    </padding>
    <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Filter: " />
      <TextField  fx:id="textListViewField"  prefHeight="25.0" prefWidth="323.0" />
    </children>
  </HBox>
  <ListView fx:id="listView" prefHeight="300.0" prefWidth="800.0" />
  <Button fx:id="ExportSelectedItems" mnemonicParsing="false" onAction="#exportItems" prefHeight="24.0" prefWidth="120.0" text="Export"  />
  <Button fx:id="ScanPolicies" mnemonicParsing="false" onAction="#scanPolicies" prefHeight="24.0" prefWidth="120.0" text="Scan"  />
</FlowPane>